#!/bin/bash
#------------------------------------------------------------
# 指定回数目に呼び出された際の戻り値と出力値を設定する。
# 設定値はファイルとして保存する。
#------------------------------------------------------------
if [ #? -ne 3 ]; then
  echo "Usage : $(basename $0) 回数 戻り値 出力"
  exit 2
fi

stubDir=$(dirname $0)
callcountStr=$(echo $1 | awk '{printf("%03d", $0)}')

# 戻り値設定
echo $2 > ${stubDir}/SHELLNAME.expect.return${callcountStr}

# 出力設定
echo -n "$3" > ${stubDir}/SHELLNAME.expect.output${callcountStr}
